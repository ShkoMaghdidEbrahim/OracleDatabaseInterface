            <Button FocusVisualStyle="{StaticResource FocusVisualStyle}"
                    x:Name="CreateUserButton"
                    Content="Create User"
                    HorizontalAlignment="Center"
                    Width="184"
                    Height="42"
                    Grid.Row="4"
                    VerticalAlignment="Top"
