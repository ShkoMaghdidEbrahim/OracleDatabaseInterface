                    <TextBox FocusVisualStyle="{StaticResource FocusVisualStyle}"
                             KeyDown="PasswordTextBox_KeyDown"
                             Width="240"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             x:Name="PasswordTextBox"
                             Height="42"
                             Padding="5,0,0,0"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
